{
	"name": "voicedev",
	"displayName": "VoiceDev",
	"description": "Voice-activated commands for VS Code - speak to code, commit, and control your editor",
	"version": "0.1.0",
	"publisher": "mohitSharma74",
	"icon": "media/assets/logo-128x128.png",
	"engines": {
		"vscode": "^1.85.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"voice",
		"speech",
		"dictation",
		"accessibility",
		"productivity",
		"git",
		"whisper"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/mohitSharma74/voicedev"
	},
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "voicedev.startRecording",
				"title": "VoiceDev: Start Recording"
			},
			{
				"command": "voicedev.stopRecording",
				"title": "VoiceDev: Stop Recording"
			},
			{
				"command": "voicedev.toggleRecording",
				"title": "VoiceDev: Toggle Recording"
			},
			{
				"command": "voicedev.saveRecording",
				"title": "VoiceDev: Save Recording"
			},
			{
				"command": "voicedev.setApiKey",
				"title": "VoiceDev: Set API Key"
			},
			{
				"command": "voicedev.clearApiKey",
				"title": "VoiceDev: Clear API Key"
			},
			{
				"command": "voicedev.listCommands",
				"title": "VoiceDev: List Voice Commands"
			},
			{
				"command": "voicedev.openCommandCenter",
				"title": "VoiceDev: Open Command Center"
			},
			{
				"command": "voicedev.showWelcome",
				"title": "VoiceDev: Show Welcome Message"
			},
			{
				"command": "voicedev.showShortcuts",
				"title": "VoiceDev: Show Keyboard Shortcuts"
			}
		],
		"configuration": {
			"title": "VoiceDev",
			"properties": {
				"voicedev.stt.provider": {
					"type": "string",
					"default": "groq",
					"enum": [
						"groq",
						"openai",
						"local"
					],
					"enumDescriptions": [
						"Fast cloud API with free tier (recommended for getting started)",
						"Paid cloud API",
						"Privacy-first: runs fully offline, zero cost (requires Python 3.9+)"
					],
					"description": "Speech-to-text provider"
				},
				"voicedev.llm.provider": {
					"type": "string",
					"default": "openrouter",
					"enum": [
						"openrouter",
						"groq",
						"openai"
					],
					"description": "LLM provider for commit message generation"
				},
				"voicedev.llm.model": {
					"type": "string",
					"default": "anthropic/claude-3-haiku-20240307",
					"description": "LLM model to use (provider-specific)"
				},
				"voicedev.audio.feedbackSounds": {
					"type": "boolean",
					"default": true,
					"description": "Play audio feedback when starting or stopping recording"
				},
				"voicedev.copilot.cliPath": {
					"type": "string",
					"default": "",
					"description": "Optional absolute path to the GitHub CLI (gh) executable used for Copilot commands"
				},
				"voicedev.commands.disabled": {
					"type": "array",
					"default": [],
					"items": {
						"type": "string"
					},
					"description": "List of voice command IDs to disable"
				},
				"voicedev.local.model": {
					"type": "string",
					"default": "base",
					"enum": [
						"tiny",
						"base",
						"small"
					],
					"enumDescriptions": [
						"Tiny (~75MB) - Fastest, best for short commands",
						"Base (~140MB) - Good balance of speed and accuracy (recommended)",
						"Small (~460MB) - Better accuracy, slower transcription"
					],
					"description": "Whisper model size for local STT. Larger models are more accurate but slower."
				}
			}
		},
		"keybindings": [
			{
				"command": "voicedev.startRecording",
				"key": "ctrl+shift+v",
				"mac": "cmd+shift+v",
				"when": "!voicedev.isRecording"
			},
			{
				"command": "voicedev.stopRecording",
				"key": "ctrl+shift+v",
				"mac": "cmd+shift+v",
				"when": "voicedev.isRecording"
			},
			{
				"command": "voicedev.listCommands",
				"key": "ctrl+shift+l",
				"mac": "cmd+shift+l"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"clean": "rm -rf out",
		"compile": "webpack --mode development",
		"compile:prod": "webpack --mode production",
		"compile:test": "tsc -p ./tsconfig.test.json && tsc-alias -p ./tsconfig.test.json",
		"watch": "webpack --mode development --watch",
		"pretest": "npm run compile && npm run compile:test && npm run lint",
		"lint": "eslint src --ext ts --max-warnings=0",
		"lint:fix": "eslint src --ext ts --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"prepare": "husky",
		"test": "vscode-test",
		"package": "npm run compile:prod && npm run lint && mkdir -p dist && vsce package --out dist/",
		"vsix": "vsce package --out dist/",
		"package:install": "code --install-extension dist/voicedev-0.1.0.vsix",
		"build:install": "npm run package && npm run package:install"
	},
	"devDependencies": {
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "20.x",
		"@types/proxyquire": "^1.3.28",
		"@types/sinon": "^21.0.0",
		"@types/vscode": "^1.85.0",
		"@types/webpack": "^5.28.5",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.21.0",
		"@vscode/test-cli": "^0.0.4",
		"@vscode/test-electron": "^2.3.8",
		"@vscode/vsce": "^3.7.1",
		"chai": "^4.3.10",
		"concurrently": "^9.2.1",
		"copy-webpack-plugin": "^13.0.1",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.2.4",
		"proxyquire": "^2.1.3",
		"sinon": "^17.0.1",
		"ts-loader": "^9.5.4",
		"tsc-alias": "^1.8.16",
		"typescript": "^5.3.3",
		"webpack": "^5.104.1",
		"webpack-cli": "^6.0.1"
	},
	"lint-staged": {
		"**/*.ts": [
			"eslint --fix",
			"prettier --write"
		],
		"**/*.{json,md,yml,yaml,css,scss,html}": [
			"prettier --write"
		]
	},
	"dependencies": {
		"@picovoice/pvrecorder-node": "^1.2.2",
		"fuse.js": "^7.1.0",
		"glob": "^10.3.10",
		"groq-sdk": "^0.37.0"
	}
}
